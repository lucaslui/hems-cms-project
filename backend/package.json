{
  "name": "software-nuvem-backend-clean",
  "version": "1.2.0",
  "description": "",
  "main": "./src/configuration/start.ts",
  "scripts": {
    "start": "node ./dist/src/main/server.js",
    "build": "rimraf dist && tsc -p ./tsconfig-build.json",
    "debug": "npx nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy dist/src/main/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/main/server.ts --transpile-only --files",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "watch": "npx tsc -p ./tsconfig-build.json -w",
    "build:docker": "docker build -t lucaslui/backend-image-repository .",
    "push:docker": "docker push lucaslui/backend-image-repository",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "check": "npm-check -s -u"
  },
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.20",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "rimraf": "^3.0.2",
    "sucrase": "^3.17.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.15.0",
    "bcrypt": "^5.0.1",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.3",
    "swagger-ui-express": "^4.1.6",
    "validator": "^13.5.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
